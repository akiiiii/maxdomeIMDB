{
  "name": "Maxdome-IMDB Ratings",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Holt beim Surfen auf Maxdome.de mittels Knopfdruck das Rating von imdb.com; icon by Paul Robert Lloyd",
  "permissions": [
    "tabs", 
    "http://www.maxdome.de/*", 
    "https://www.maxdome.de/*",
    "http://www.imdb.com/*",
    "https://www.imdb.com/*",
    "http://ajax.googleapis.com/ajax/*"
  ],
  "browser_action": {
      "default_title": "Choose option",
      "default_icon": "imdb.png",
      "default_popup": "popup.html"
  }
}